<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image(100,100) %>
        <table class = "table">
        <thead>
          <tr>
            <th class="header1">name</th>
            <th class="header2"><%= @user.name %></th>
          </tr>
          <tr>
            <th class="header1">introduction</th>
            <th class="header2"><%= @user.introduction %></th>
          </tr>
        </thead>
      </table>
      <div class="row">
        <% if current_user == @user %>
          <%= link_to edit_user_path, class: "btn btn-light btn-block", method: :get do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        <% else %>
          <%= link_to user_path(@user), class: "btn btn-light btn-block", method: :get do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        <% end %>
      </div>
      <h1 class="mt-3">New book</h1>
        <%= form_with model: Book.new do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>

          <h4>Opinion</h4>
            <%= f.text_area :body %>
          <h4></h4>
            <%= f.submit 'Create Book', class:"btn btn-success btn-lg" %>
        <% end %>
    </div>  
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= image_tag book.user.get_profile_image(100,100) %></br>
                <%= link_to book.user.name, user_path(book.user) %>
              </td>
              <td>
                <%= link_to book_path(book) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
              <% if book.user == current_user %>
                <td><%= link_to 'Edit', edit_book_path(book), class:"btn btn-success btn-sm" %></td>
                <td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-danger btn-sm" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
