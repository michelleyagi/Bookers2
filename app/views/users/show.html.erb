<div class = "container">
  <div class = "row">
    <div class = "col-md-3"> 
      <h1>User info</h1>
        <%= image_tag @user.get_profile_image(100,100) %>
      <table class = "table">
        <thead>
          <tr>
            <th class = "header1">name</th>
            <th class = "header2"><%= @user.name %></th>
          </tr>
          <tr>
            <th class = "header1">introduction</th>
            <th class = "header2"><%= @user.introduction %></th>
          </tr>
        </thead>
      </table>

      <div class="row">
        <%= link_to edit_user_path(@user), class: "btn btn-light btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h1 class = "mt-3">New book</h1>
      <%= form_with model: Book.new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <h4></h4>
        <%= f.submit 'Create Book', class:"btn btn-success btn-lg" %>

      <% end %>
    </div>
    
    <div class = "col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class = "table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
　　　　<tbody>
        <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.profile_image, size: "100x100" %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@user.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
        <% end %>  
        </tbody>
      </table>
    </div>
  </div>
</div>