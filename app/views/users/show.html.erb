<div class = "container">
  <div class = "row">
    <div class = "col-md-3"> 
      <h1>User info</h1>
      <%= image_tag (@profile_image.present? ?  @profile_image: 'no_image.jpg') %>
      <table class = "table">
        <thead>
          <tr>
            <th class = "header1">name</th>
            <th class = "header2"><%= @name %></th>
          </tr>
          <tr>
            <th class = "header1">introduction</th>
            <th class = "header2"><%= @introduction %></th>
          </tr>
        </thead>
      </table>

      <div class = "button">
        <%= button_to edit_user_path,class: "btn btn-light btn-block", method: :get do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h1 class = "mt-3">New book</h1>
      <%= form_with model: Book.new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <h4></h4>
        <%= f.submit 'Create Book', class:"btn btn-success btn-lg" %>

      <% end %>
    </div>
    
    <div class = "col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class = "table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>