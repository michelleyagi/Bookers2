<h1>Users info</h1>
<%= image_tag (@profile_image.present? ?  @profile_image: 'no_image.jpg') %>
<table class = "table">
    <thead>
      <tr>
        <th class = "header1">name</th>
        <th class = "header2"><%= @name %></th>
      </tr>
      <tr>
        <th class = "header1">introduction</th>
        <th class = "header2"><%= @introduction %></th>
      </tr>
    </thead>
</table>

<h1>New book</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
  
<% end %>
  
