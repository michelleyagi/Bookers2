<div class = "container">
  <div class = "row">
    <div class = "col-md-3"> 
      <h1>Users info</h1>
        <%= image_tag current_user.get_profile_image(100,100) %>
      <table class = "table">
        <thead>
          <tr>
            <th class = "header1">name</th>
            <th class = "header2"><%= current_user.name %></th>
          </tr>
          <tr>
            <th class = "header1">introduction</th>
            <th class = "header2"><%= current_user.introduction %></th>
          </tr>
        </thead>
      </table>
    
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class: "btn btn-light btn-block", method: :get do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h1 class = "mt-3">New book</h1>
      <%= form_with model: Book.new do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title %>
  
      <h4>Opinion</h4>
      <%= f.text_area :body %>
  
      <%= f.submit 'Create Book', class:"btn btn-success btn-lg" %>
  
    <% end %>
    </div>
  
    <div class = "col-md-8 offset-md-1">
      <h1>Users</h1>
        <table class = "table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= image_tag user.get_profile_image(100,100) %>
                </td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>